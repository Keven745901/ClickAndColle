{% extends 'base.html.twig' %}

{% block title %}New Message{% endblock %}

{% block body %}
    <h1>Envoyer un message Ã  un vendeur</h1>

    <form action="{{ path('message_new') }}" method="get">
        <p>Email client: </p>
        <input name="emailcli" id="emailcli" placeholder="cli@gmail.com"></input>
        <br />
        <p>Email vendeur: </p>
        <select name="emailvend" id="emailvend">
        {% for user in users %}
            <option value={{ user.id }}>{{ user.email }}</option>
        {% endfor %}
        </select>
        
        <br />
        <p>Titre: </p>
        <input name="titremes" id="titremes" placeholder="Object du message"></input>
        <br />
        <p>Contenu: </p>
        <textarea name="contenumes" id="contenumes" placeholder="Contenu du message"></textarea>
        <br /><br />
        <input type="submit" name="btnsubmit" value="Envoyer">
        <br /><br />
        <a href="{{ path('message_index') }}"><input type="button" value="Retour"></a>
    </form>
{% endblock %}
