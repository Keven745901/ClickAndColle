{% extends 'base.html.twig' %}

{% block title %}Magasin{% endblock %}

{% block body %}
    <h1>Magasin</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ magasin.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ magasin.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ magasin.description }}</td>
            </tr>
            <tr>
                <th>CodePostal</th>
                <td>{{ magasin.codePostal }}</td>
            </tr>
        </tbody>
    </table>

    <table class="table">
        <tbody></tbody>
            {% for p in stock %}
                <tr>
                    <th>Produit</th>
                    <td>{{ p.idArticle.idTypeArticle.libelle }}</td>

                    <th>Prix</th>
                    <td>{{ p.idArticle.prix }}</td>

                    <th>Stock</th>
                    <td>{{ p.quantite > 0 ? 'En stock' : 'Plus disponible' }}</td>

                    <th>Description</th>
                    <td>{{ p.idArticle.idTypeArticle.description }}</td>
                </tr>

            {% endfor %}
        </tbody>
    <tbody>

    <a href="{{ path('magasin_index') }}">back to list</a>

    <a href="{{ path('magasin_edit', {'id': magasin.id}) }}">edit</a>

    {{ include('magasin/_delete_form.html.twig') }}
{% endblock %}
