{% extends 'base.html.twig' %}

{% block title %}Magasin{% endblock %}

{% block body %}
    <h1>Magasin</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ magasin.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ magasin.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ magasin.description }}</td>
            </tr>
            <tr>
                <th>CodePostal</th>
                <td>{{ magasin.codePostal }}</td>
            </tr>
        </tbody>
    </table>
    <br />
    <table class="table">
    <tbody>
        {% for p in stock %}
                <tr>
                    <td><center>{{ p.idArticle.idTypeArticle.libelle }}</center></td>
                    <td><center>{{ p.idArticle.idTypeArticle.description }}</center></td>
                     <td><center>{{ p.quantite > 0 ? 'En stock' : 'Plus disponible' }}</center></td>
                    <td><center>{{ p.idArticle.prix }}</center></td>
                    <td><center>{{ p.quantite }}</center></td>
                    <td><a href="{{ path('stock_edit', {'id': p.idArticle.id}) }}">Modifier Stock</a></td>
                    <td {{ p.quantite > 0 ? '' : 'style="display:none"' }}>
                    <a href="{{ path('magasin_show', {'id': magasin.id, 'produit': p.id}) }}">Ajouter au panier</a>
                    </td>                 
                </tr>
            {% endfor %}
    </tbody>
    </table>

    <br />
    <a href="{{ path('article_new') }}">Ajouter produit</a>
    <br /><br />
    <a href="{{ path('magasin_index') }}">Retour</a>

{% endblock %}
