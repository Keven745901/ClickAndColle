{% extends 'base.html.twig' %}

{% block title %}TypeArticle index{% endblock %}

{% block body %}
<br />
    <center><h1>Liste des Types Articles</h1>
    <br /><br />
    <a href="{{ path('type_article_new') }}"><input type="button" value="Créer Type Article" class="btn btn-primary"></a>
    <a href="{{ path('article_index') }}"><input type="button" value="Retour" class="btn btn-outline-primary"></a></center>
    <br />
    <table class="table table-hover table-secondary">
        <tbody>
        {% for type_article in type_articles %}
            <tr>
                <td>{{ type_article.id }}</td>
                <td>{{ type_article.libelle }}</td>
                <td>{{ type_article.description }}</td>
                <td>
                    <a href="{{ path('type_article_edit', {'id': type_article.id}) }}"><input type="button" value="Modifier" class="btn btn-outline-primary"></a>
                </td>
                <td>
                    {{ include('type_article/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun Type Article trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
