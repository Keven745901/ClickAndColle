{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<form action="{{ path('commander') }}" method="get">
    <div>
        <br />
        <center><h1>Mon panier</h1>
        <br /><br /><br />
        {% if panier|length > 0 %}
        {% for i in 0..panier|length-1 %}
            {{ panier[i].idTypeArticle.libelle }} ({{ panier[i].prix }} €) Quantité : <input type=text value=1 name=txt{{i}} required="required">
            <br /><br />

        {% endfor %}
        {% endif %}

        <input type="date" name="calendrier" required="required">
        <select name="heure">
        {% for h in 8..18 %}
            <option value = {{ h }}>{{h}}</option>
        {% endfor %}
        </select>
        h
        <select name="minutes">
            <option value="00">00</option>
            <option value="30">30</option>
        </select>
        <br><br>
        <a href="{{ path('reset') }}"><input type="button" value="Remettre à zéro" class="btn btn-outline-primary"></a>
        <input type="submit" value="Commander" class="btn btn-primary"></center>
    </div>
</form>
{% endblock %}