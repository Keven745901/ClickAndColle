{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>
    <form action="{{ path('article_index') }}" method="get">
        <input type="text" name="recherche" placeholder="Nom" />
        <input type="submit" value="Recherche">
        <br /><br />
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Prix</th>
                    <th>Disponibilit√©</th>
                    <th>Magasin</th>
                </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tbody>

                {% for s in article.stocks %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.getIdTypeArticle() }}
                    <td>{{ article.prix }}</td>
                    <td>{{ s.quantite > 0 ? 'En stock' : 'Indisponible' }}</td>
                    <td>{{ s.idMagasin.nom }}</td>
                    <td>
                        <a href="{{ path('article_show', {'id': article.id}) }}">show</a>
                        <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                    </td>
                </tr>

                {% endfor %}
                </tbody>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('article_new') }}">Create new</a>
    </form>
{% endblock %}