{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <center><h1>Listes des Article</h1>
    <form action="{{ path('article_index') }}" method="get">
        <input type="text" name="recherche" placeholder="Nom" />
        <input type="submit" value="Recherche">
        <a href="{{ path('article_new') }}"><input type="button" value="Créér Article"></a>
        <a href="{{ path('magasin_index') }}"><input type="button" value="Retour"></a></center>
        <br><br><br />
        <table class="table">
            <tbody>
            {% for article in articles %}
                <tbody>

                {% for s in article.stocks %}
                <tr>
                    <td>{{ article.id }}</td>
                    <td>{{ article.getIdTypeArticle() }}
                    <td>{{ article.prix }}</td>
                    <td>{{ s.quantite > 0 ? 'En stock' : 'Indisponible' }}</td>
                    <td>{{ s.idMagasin.nom }}</td>
                    <td>
                        <a href="{{ path('article_edit', {'id': article.id}) }}"><input type="button" value="Modifier"></a>
                    </td>
                    <td>{{ include('article/_delete_form.html.twig') }}</td>
                </tr>

                {% endfor %}
                </tbody>
            {% endfor %}
            </tbody>
        </table>
        
        <br /><br/>
    </form>
{% endblock %}